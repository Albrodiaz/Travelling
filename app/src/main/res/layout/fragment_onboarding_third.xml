<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_pastel"
    android:paddingHorizontal="24dp"
    android:paddingTop="56dp"
    tools:context=".view.login.fragments.loginviewpager.FragmentOnboardingThird">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ob3Title"
        style="@style/OnBoardingTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/perfectRoomate"
        app:layout_constraintBottom_toTopOf="@id/ob3Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ob3Description"
        style="@style/OnBoardingDescriptionStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/matchHelp"
        app:layout_constraintBottom_toTopOf="@id/ob3Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ob3Title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ob3Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@id/ob3LoginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ob3Description"
        app:srcCompat="@drawable/viewpager_3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ob3LoginBtn"
        style="@style/BtOnboardingLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ob3Image" />

</androidx.constraintlayout.widget.ConstraintLayout>