<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Login Text Style -->
    <style name="LoginTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="BoldTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">4dp</item>
    </style>

    <!-- Login Button Style -->
    <style name="LoginButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">12dp</item>
        <item name="android:text">@string/login</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="icon">@drawable/ic_baseline_arrow_forward_24</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:enabled">false</item>
    </style>

    <!-- AlertDialog Style -->
    <style name="Theme.App.LoginAlertStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSurface">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
    </style>

</resources>