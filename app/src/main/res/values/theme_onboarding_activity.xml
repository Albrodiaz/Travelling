<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.OnboardingActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/grey_dark</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">sans-serif-medium</item>
        <item name="materialButtonStyle">@style/obNextBtn</item>
    </style>

    <style name="OnBoardingTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OnBoardingDescriptionStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginVertical">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="obSkipBtn" parent="obNextBtn">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="backgroundTint">@color/orange_pastel</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="obNextBtn" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="BtOnboardingLogin" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="icon">@drawable/baseline_keyboard_arrow_down_black_24dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:text">@string/login</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>
</resources>