<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RegisterActivity" parent="Theme.Travelling">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/grey_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>

        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.CustomToolbar</item>
        <item name="textInputStyle">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.CustomTextInput
        </item>
        <item name="materialButtonStyle">@style/CustomButton</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- TextInput Layout Style -->
    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.CustomTextInput">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.CustomEditText
        </item>
        <item name="boxBackgroundColor">@color/inputTextBackground</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.CustomEditText">
        <item name="colorPrimary">@color/borderColor</item>
        <item name="android:textColorPrimary">@color/borderColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.MaterialComponents.Toolbar.CustomToolbar">
        <item name="titleTextColor">@color/primaryTextColor</item>
    </style>

    <!-- Button Style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Button</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Button" parent="">
        <item name="colorPrimary">@color/secondaryColor</item>
    </style>


</resources>
