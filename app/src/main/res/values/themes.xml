<resources>
    <!-- Base application theme. -->
    <style name="Theme.Travelling" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Register Activity Theme -->
    <style name="Theme.RegisterActivity" parent="Theme.Travelling">
        <item name="textInputStyle">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.CustomTextInput
        </item>
        <item name="materialButtonStyle">@style/RegisterButton</item>
    </style>

    <!-- Login Activity Theme -->
    <style name="Theme.LoginActivity" parent="Theme.Travelling">
        <item name="colorPrimary">@color/grey_dark</item>
        <item name="android:textColorPrimary">@color/grey_dark</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="materialAlertDialogTheme">@style/Theme.App.LoginAlertStyle</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="materialButtonStyle">@style/LoginButtonStyle</item>
    </style>

    <!-- OnBoarding Activity Theme -->
    <style name="Theme.InfoActivity" parent="Theme.Travelling">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.OnboardingActivity</item>
        <item name="android:statusBarColor">@color/orange_pastel</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.OnboardingActivity" parent="">
        <item name="colorPrimary">@color/black</item>
    </style>
</resources>